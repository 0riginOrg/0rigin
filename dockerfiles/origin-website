FROM python:2.7

# Install watchdog for celery auto restart on code changes
RUN pip install watchdog
#
# Install requirements
WORKDIR /app
COPY ./origin-website/requirements.txt /app
RUN pip install -r requirements.txt
# TODO
# Fix for broken egg name in requirements.txt
RUN pip install git://github.com/OriginProtocol/flask-recaptcha.git@master#egg=flask_recaptcha
