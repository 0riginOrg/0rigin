{
  "$schema":"http://json-schema.org/draft-06/schema#",
  "type": "object",
  "required": ["listingType", "category", "slotLength", "slotLengthUnit", "name", "description"],
  "properties": {
    "listingType": {
      "const": "fractional"
    },
    "category": {
      "const": "for-rent"
    },
    "slotLength": {
      "type": "number",
      "title": "schema.slotLength",
      "default": 1
    },
    "slotLengthUnit": {
      "type": "string",
      "enum": [
        "minutes",
        "hours",
        "days",
        "weeks",
        "months",
        "years"
      ],
      "default": "hours"
    },
    "name": {
      "type": "string",
      "title": "schema.title",
      "minLength": 3,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "title": "schema.description",
      "minLength": 10,
      "maxLength": 1024
    },
    "pictures": {
      "type": "array",
      "title": "schema.selectPhotos",
      "items": {
        "type": "string",
        "format": "data-url"
      }
    },
    "sellerSteps": {
      "type": "string",
      "title": "schema.sellerSteps",
      "enum": [
        "schema.messageBuyer",
        "schema.prepareProperty",
        "schema.rateBuyer"
      ]
    }
  }
}
