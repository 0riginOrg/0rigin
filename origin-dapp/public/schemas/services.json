{
  "$schema":"http://json-schema.org/draft-06/schema#",
  "type": "object",
  "required": ["name","category","description","price"],
  "properties": {
    "listingType": {
      "const": "unit"
    },
    "name": {
      "type": "string",
      "title": "schema.services.title",
      "minLength": 3,
      "maxLength": 100
    },
    "examples": {
      "type": "string",
      "title": "schema.services.examples",
      "enum": [
        "schema.services.dogWalking",
        "schema.services.musicLessons",
        "schema.services.salon",
        "schema.services.transportation"
      ]
    },
    "category": {
      "type": "string",
      "title": "schema.services.category",
      "enum": [
        "schema.services.counseling",
        "schema.services.design",
        "schema.services.dogWalking",
        "schema.services.musicLessons",
        "schema.services.other",
        "schema.services.photography",
        "schema.services.salon",
        "schema.services.spa",
        "schema.services.transportation"
      ],
      "default":"schema.services.transportation"
    },
    "description": {
      "type": "string",
      "title": "schema.services.description",
      "minLength": 10,
      "maxLength": 1024
    },
    "price": {
      "type": "number",
      "title": "schema.services.priceInETH"
    },
    "pictures": {
      "type": "array",
      "title": "schema.services.selectPhotos",
      "items": {
        "type": "string",
        "format": "data-url"
      }
    },
    "sellerSteps": {
      "type": "string",
      "title": "schema.services.sellerSteps",
      "enum": [
        "schema.services.messageBuyer",
        "schema.services.provideService",
        "schema.services.rateBuyer"
      ]
    }
  }
}
