{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "required": [
    "name",
    "description"
  ],
  "properties": {
    "dappSchemaId": {
      "const": "announcements-barter_1.0.0"
    },
    "listingType": {
      "const": "unit"
    },
    "category": {
      "const": "announcements"
    },
    "name": {
      "type": "string",
      "title": "schema.title",
      "minLength": 3,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "title": "schema.description",
      "minLength": 10,
      "maxLength": 1024
    },
    "pictures": {
      "type": "array",
      "title": "schema.selectPhotos",
      "items": {
        "type": "string",
        "format": "data-url"
      }
    }
  }
}